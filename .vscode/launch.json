{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "启动扩展",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceRoot}/examples",
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/*.js"
            ],
            "preLaunchTask": "run"
        }
    ]
}